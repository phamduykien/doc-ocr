# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=OCR-AI Service
VERSION=1.0.0
DESCRIPTION=Dịch vụ OCR và AI để nhận dạng và xử lý tài liệu PDF

# Server Settings
HOST=0.0.0.0
PORT=8000
DEBUG=true

# OCR Settings
TESSERACT_CMD=/usr/bin/tesseract
OCR_LANG=vie+eng
OCR_DPI=300

# AI Settings (OpenAI)
OPENAI_API_KEY=your-openai-api-key-here
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.1

# File Settings
MAX_FILE_SIZE=52428800
UPLOAD_DIR=uploads
ALLOWED_EXTENSIONS=.pdf

# Confidence Thresholds
MIN_CONFIDENCE_SCORE=0.7
HIGH_CONFIDENCE_SCORE=0.9

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
